<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginHorizontal="10sp"
    android:elevation="15dp"
    app:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10sp">

    <ImageView
        android:id="@+id/photoIV"
        android:layout_width="match_parent"
        android:layout_height="163sp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/project_image_string"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/projectNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="@string/project_name_placeholder"
        android:textColor="@color/title_text"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/avenir_next_pro"/>
<!--Street address - Listing-->
    <TextView
        android:id="@+id/AddressTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="1dp"
        android:text="@string/description_listing_placeholder"
        android:textColor="@color/desc_text"
        android:textSize="12sp"
        android:fontFamily="@font/avenir_next_pro"/>
<!--Exec category 路 year 路 tenure yrs-->
    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="1dp"
        android:text="@string/description2_listing_placeholder"
        android:textColor="@color/desc_text"
        android:textSize="12sp"
        android:fontFamily="@font/avenir_next_pro"/>
<!--bedrooms 路 bathrooms 路 area_size -->
    <TextView
        android:id="@+id/roomSizeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="@string/attribute_listing_placeholder"
        android:textColor="@color/title_text"
        android:textSize="14sp"
        android:fontFamily="@font/avenir_next_pro"/>
<!--price/mo-->
    <TextView
        android:id="@+id/priceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="@string/price_listing_placeholder"
        android:textColor="@color/title_text"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/avenir_next_pro"/>

</LinearLayout>
</androidx.cardview.widget.CardView>